@model AlphaDev.Web.Models.LoginViewModel

@{
    ViewBag.Title = "Login";
}

<h1 class="text-center">Login</h1>

<div class="container">

    <form asp-route-returnurl="@ViewData["ReturnUrl"]" method="post">
        <div>
            <div>
                <div><label asp-for="Username"></label></div>
                <div><input asp-for="Username" class="form-control" /></div>
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>
            <div>
                <div><label asp-for="Password"></label></div>
                <div><input asp-for="Password" class="form-control" /></div>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-default">Log in</button>
        </div>
    </form>
</div>